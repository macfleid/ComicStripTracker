<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp" >
        
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title : "
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/collection_comic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAllCaps="true" />

        <View
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_weight="1" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tome : " />

        <TextView
            android:id="@+id/library_tome_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5sp"
        android:padding="0sp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="12sp"
            android:text="@string/collection_items_release_date" />

        <TextView
            android:id="@+id/collection_item_createddate"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5sp"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5sp"
        android:padding="0sp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="12sp"
            android:text="@string/collection_items_bought_date" />

        <TextView
            android:id="@+id/collection_item_boughtdate"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5sp"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="text" />
        

    </LinearLayout>

</LinearLayout>