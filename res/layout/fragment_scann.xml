<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <Button
        android:id="@+id/button_manual"
        style="@style/button_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonScannForShare"
        android:layout_alignRight="@+id/buttonScannForShare"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_action_read"
        android:drawablePadding="15sp"
        android:text="Manual" />

    <Button
        android:id="@+id/buttonScann"
        style="@style/button_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_manual"
        android:layout_alignLeft="@+id/buttonScannForShare"
        android:layout_alignRight="@+id/buttonScannForShare"
        android:layout_marginBottom="14dp"
        android:drawableLeft="@drawable/ic_action_camera"
        android:drawablePadding="15sp"
        android:text="@string/scann_button" />

    <Button
        android:id="@+id/buttonScannForShare"
        style="@style/button_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_manual"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_action_camera"
        android:drawablePadding="15sp"
        android:layout_marginTop="15sp"
        android:text="@string/scann_button_share" />

</RelativeLayout>
